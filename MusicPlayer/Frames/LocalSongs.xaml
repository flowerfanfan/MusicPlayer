<Page
    x:Class="MusicPlayer.Frames.LocalSongs"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicPlayer.Frames"
    xmlns:models="using:MusicPlayer.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="我的音乐"
                           FontSize="36"
                           VerticalAlignment="Center"
                           Margin="20, 0, 0, 0" />
                <AppBarButton x:Name="RefreshBtn"
                              VerticalAlignment="Bottom"
                              Icon="Refresh"
                              Click="RefreshBtn_Click"/>
            </StackPanel>
            <Line Stretch="Fill"
                  Stroke="Black"
                  StrokeThickness="1"
                  X1="1"
                  Margin="20, 0, 20, 0"
                  HorizontalAlignment="Stretch" VerticalAlignment="Bottom"/>
        </Grid>

        <ListView Grid.Row="1" x:Name="songList" Padding="20"
                  ItemsSource="{x:Bind localSongsVM.Songs, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Song">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Padding="10">
                        <Image Source="{x:Bind Cover, Mode=OneWay}" Width="50" Height="50" />
                        <StackPanel Margin="20, 0, 0, 0">
                            <TextBlock Text="{x:Bind Title, Mode=OneWay}" FontSize="25" VerticalAlignment="Top"/>
                            <TextBlock Text="{x:Bind Artist, Mode=OneWay}" FontSize="20" VerticalAlignment="Bottom"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
